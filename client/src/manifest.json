{
  "name": "DramaNow-Client",
  "version": "1.0",
  "description": "Pickup where you left off with your favourite dramas!",
  "permissions": ["storage", "activeTab", "tabs", "http:///"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.dramafever.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "manifest_version": 2
}
